<Window x:Class="BubbleExe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BubbleExe"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="800"
        WindowStartupLocation="CenterScreen" Topmost="True"
        >
    <Grid>
        
        <Grid x:Name="MainMenu" Opacity="1" Grid.RowSpan="2" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" x:Name="startGameButton" Content="Play" Click="Button_Click" Width="100" FontSize="18" Margin="0,0,0,0"/>
            <Label  Grid.Row="0" x:Name="titleLabel" Content="BUBBLE 'XPLODER 2025 - DEMAKE EDITION" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" HorizontalContentAlignment="Center" Margin="0,10,0,0"/>
        </Grid>
        <Grid x:Name="GameplayGraphic" Opacity="0" IsHitTestVisible="False" HorizontalAlignment="Center" Width="800" Grid.RowSpan="2">
            <Label x:Name="Timer" Content="Remaining Time:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="178"/>
            <Label x:Name="Score" Content="Score:" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="178"/>

        </Grid>
    </Grid>
</Window>
